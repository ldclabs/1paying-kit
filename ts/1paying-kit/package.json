{
  "name": "@ldclabs/1paying-kit",
  "version": "0.3.2",
  "type": "module",
  "description": "The Typescript version of the client SDK for https://1Pay.ing.",
  "license": "MIT",
  "homepage": "https://github.com/ldclabs/1paying-kit/tree/main/ts/1paying-kit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldclabs/1paying-kit.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "browser": {
    "node:fs/promises": false,
    "node:path": false,
    "mime/lite": false
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./gzip": {
      "types": "./dist/gzip.d.ts",
      "browser": "./dist/gzip.js",
      "default": "./dist/gzip.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "browser": "./dist/types.js",
      "default": "./dist/types.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "browser": "./dist/utils.js",
      "default": "./dist/utils.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.{json,js,jsx,ts,tsx,css,scss}\"",
    "test": "vitest run --testTimeout=60000",
    "ncu": "npx npm-check-updates -u"
  },
  "dependencies": {
    "@noble/curves": ">=1.9.0",
    "@noble/hashes": ">=1.8.0",
    "cborg": ">=4.3.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}